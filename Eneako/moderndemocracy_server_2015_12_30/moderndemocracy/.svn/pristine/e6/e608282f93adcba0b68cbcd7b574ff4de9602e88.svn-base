html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, font, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td {
	margin: 0;
	padding: 0;
	border: 0;
	outline: 0;
	font-weight: inherit;
	font-style: inherit;
	font-size: 100%;
	font-family: inherit;
	vertical-align: baseline;
}
html, body {height:100%;}
body {
    background: none repeat scroll 0 0 #e6eae9;
    color: #4f6b72;
    font-family: "Trebuchet MS",Verdana,Arial,Helvetica,sans-serif;
    font-size: 100%;
    margin: 0 auto;
    min-height: 100%;
}
.contentWrapper {
    background: none repeat scroll 0 0 #fff;
    margin: 0 auto;
    min-height: 95%;
    padding-bottom: 50px;
    position: relative;
    width: 85%;
}
img {
    height: auto;
    max-width: 100%;
}
#map-canvas img {max-width:none;}
/*colours*/
.green{
	background:#56C785;
}
.amber{
	background:#EFC355;
}
.red{
	background:#CF616B;
}
.grey{background:#D0D0D0;}
.high{color:#CF616B;}
.medium{color:#EFC355;}
.low{color: #56C785;}

header div {
    text-align: center;
}
nav {
    background: linear-gradient(to bottom, #69c4e8, #21a1d4) repeat scroll 0 0 rgba(0, 0, 0, 0);
    /*border-radius: 5px;*/
    /*box-shadow: 0 -3px 0 #1f97c7 inset, 0 -3px 3px #1f9acc inset, 0 2px 2px #9ad7ef inset, 1px 0 2px #22a4d9 inset, -1px 0 2px #22a4d9 inset, 0 1px 1px rgba(0, 0, 0, 0.1), 0 2px 2px rgba(0, 0, 0, 0.06), 0 3px 3px rgba(0, 0, 0, 0.17), 2px 1px 2px rgba(0, 0, 0, 0.05), -2px 1px 2px rgba(0, 0, 0, 0.05);*/
    list-style: none outside none;
    margin: 10px 0;
    min-height: 10px;
}
nav ul {
    margin: 0;
}
nav {
    list-style: none outside none;
}
nav ul li {
    display: inline-block;
    height: 60px;
    width:20%;
    vertical-align:top;
    border-left:1px solid transparent;
	border-right:1px solid transparent;
}
nav ul li.active{
	background: linear-gradient(to bottom, #63b4d4, #2093c1) repeat scroll 0 0 rgba(0, 0, 0, 0);
	border-left:1px solid #69c4e8;
	border-right:1px solid #69c4e8;
}
nav ul li a {
    color: #ffffff;
    font-size: 13px;
    font-weight: 700;
    letter-spacing: 1px;
    text-decoration: none;
    text-shadow: 0 1px 0 rgba(0, 0, 0, 0.25);
    text-transform: uppercase;
    transition: color 0.2s ease 0s;
    padding:20px 0;
    display:block;
}
a {
    text-decoration: none;
    color:#4F6B72;
    	 -webkit-transition: all 0.5s ease-in-out;
-moz-transition: all 0.5s ease-in-out;
-o-transition: all 0.5s ease-in-out;
transition: all 0.5s ease-in-out;
}
a:hover{opacity:0.7;}
.pageTitle h1 {
    color: #2f4f4f;
    margin: 20px;
    text-align: left;
}
h1 {
    font-size: 1.5em;
}
h4, h3, h2, h1 {
    margin: 0;
}
.content {
    margin-bottom: 20px;
}
.content table, .content form {
    border: medium none;
    margin: 20px auto;
    width: 80%;
}

/*dashboard*/
.row{margin:0 auto; padding: 10px;background:#f5f9f9;min-height:190px;}
.row > .box{ padding: 20px 10px; float: left; }
.row.two > .box{ width: calc(50% - 20px); width: -webkit-calc(50% - 20px); width: -moz-calc(50% - 20px);}
.box > h3{background:#2E4F4F;border-bottom:2px solid #30A9D8;padding:10px;color:#fff;text-align:center;}
.box > div { background-color: #fff;padding: 40px 15px 15px;text-align:center;min-height:50px;font-size:1.5em;}


/*tables*/
th {
    background: none repeat scroll 0 0 #fff;
    border-bottom: 2px solid #c1dad7;
    color: #4f6b72;
    font: bold 12px "Trebuchet MS",Verdana,Arial,Helvetica,sans-serif;
    letter-spacing: 1px;
    padding: 6px 6px 6px 12px;
    text-align: left;
}
table caption{text-align:left;color:#2E4F4F;margin:20px 0;font-style:italic;}
table tbody tr:nth-child(2n) {
    background-color: #f5f9f9;
}
table tbody tr td{border-bottom:1px solid #C1DAD7;}
table.dataTable tbody tr td{border-bottom:1px solid #C1DAD7;}
table.boxProgress tr > td {
    line-height: 22px;
}
td.details-control {
    background: url('../img/closed.png') no-repeat center center;
    cursor: pointer;
}
tr.shown td.details-control {
    background: url('../img/arrow2.png') no-repeat center center;
}
table#electoralArea thead tr th:first-child.sorting_asc, 
table#electoralArea thead tr th:first-child.sorting_desc,
table#electoralArea thead tr th:first-child.sorting
{background:none;}
table.dataTable tbody tr.odd{background:#F5F9F9;}
table.dataTable tbody tr.odd:hover, table.dataTable tbody tr.even:hover{background:#C1DAD7;cursor:pointer;}
.content table.dashboard{width:90%;}
table.dashboard tbody tr td:last-child{color:#fff;text-shadow:0 1px 0 rgba(0,0,0,0.3);text-align:center;}
table.dashboard tbody tr td{font-size:0.8em;}
table.boxProgress tbody tr td{line-height:2; padding: 5px 14px;}


/*issue page*/
.issueHeader{
	background:#fff;
	min-height:30px;
	position:relative;
	z-index:2;
	-webkit-box-shadow: 0 2px 2px -1px rgba(50, 50, 50, 0.25);
	-moz-box-shadow:    0 2px 2px -1px rgba(50, 50, 50, 0.25);
	box-shadow:         0 2px 2px -1px rgba(50, 50, 50, 0.25);
}
.issueHeader p{margin-left:3%;}


.issueContainer{border-bottom:1px solid #C1DAD7;background:#F5F9F9;min-height:70px;padding:10px 5px 10px 10px;}
.issueDate{min-height:30px;font-size:0.8em;color:#2E4F4F;font-style:italic;padding-left:10px;}
.issueContent{margin:15px 0 0 0;padding-left:10px;}

.high, .medium, .low{width:50px;display:inline-block;}
#resolveBtn a{
	position: absolute;
	right:10px;
}
#resolveBtn a, .formBtn{
	padding:3px;
	background:#6BBC99;
	border:1px solid #4b816a;
	color:#fff;
	float:right;
	 -webkit-transition: all 0.5s ease-in-out;
-moz-transition: all 0.5s ease-in-out;
-o-transition: all 0.5s ease-in-out;
transition: all 0.5s ease-in-out;
}
#resolveBtn a:hover, a.formBtn:hover{background:#4b816a;opacity:1;}
.open,.resolved{position:relative;}
.open:before, .resolved:before{
	content: "\f111";
    font-family: FontAwesome;
    font-style: normal;
    font-weight: normal;
    text-decoration: inherit;
	font-size:0.7em;
	padding-right:10px;
}
.open:before{color:#CF616B;}
.resolved:before{color: #56C785;}

/*maps*/
.mapWrapper{
	background:#f5f9f9;    
	margin: 20px 0;
    min-height: 100px;
    padding:20px !important;
    }
.mapIcon a{position:relative;font-size:0.9em;}
.mapIcon a:before{
	content: "\f041";
    font-family: FontAwesome;
    font-style: normal;
    font-weight: normal;
    text-decoration: inherit;
    color:#30a9d8;
    font-size:1.4em;
    padding-right:10px;
    vertical-align:middle;	
}
#map-canvas{
 display: block;
    height: 360px;
    width: 100%;	
}
/*forms*/
input, select, textarea{
	background: none repeat scroll 0 0 #fff;
    border: 1px solid #ddd;
    border-radius: 3px;
    cursor: pointer;
    font-family: "Arial",sans-serif;
    font-size: 0.8em;
    padding: 0.3em;	
}
textarea{width:80%;}
select{width:20%;}
form .group{margin:10px 0;}
label{min-width:120px;display:inline-block;color:#2e4f4f;font-style:italic;}
form .group.buttonBar{border-top:1px solid #C1DAD7;padding:20px 0;}





/*footer*/
footer {
    background-color: #30a9d8;
    bottom: 0;
    color: #fff;
    font-size: 11px;
    height: 50px;
    position: absolute;
    text-align: center;
    width: 100%;
}
.footerContent {
    padding-top: 10px;
}
.footerContent p {
    margin-top: 2px;
}
p {
    font-size: 0.8em;
    margin: 0;
}
.footerContent a {
    color: #fff;
    text-decoration: underline;
}




/*Grid Styles*/
.grid-col {
    box-sizing: border-box;
    float: left;
    padding-left: 3em;
    width: 100%;
}

.grid-wrap {
    clear: both;
    margin-left: -3em;
    overflow: hidden;
}
.grid-col-nopad {
  float: left;
  width: 100%;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box; }

.col-full,
.col-set-full .grid-col {
  width: 100%; }

.col-one-half,
.col-set-one-half .grid-col {
  width: 50%; }

.col-one-third,
.col-set-one-third .grid-col {
  width: 33.333%; }

.col-one-quarter,
.col-set-one-quarter .grid-col {
  width: 25%; }

.col-two-thirds {
  width: 66.666%; }

.col-three-quarters {
  width: 75%; }

.col-one-sixth{
	width: 16.66%
} 

@media (max-width:800px){
   #resolveBtn a{font-size:0.8em;right: 40px;margin-top: 25px;}
}
@media (max-width:650px){
	.contentWrapper{width:95%;}
	nav ul li a{font-size:12px;}
}
/* -- Breakpoint (.bp1)
------------------------------------------------------------- */
@media only screen and (min-width: 30em) {
  .bp1-col-full,
  .bp1-col-set-full .grid-col {
    width: 100%; }

  .bp1-col-one-half,
  .bp1-col-set-one-half .grid-col {
    width: 50%; }

  .bp1-col-one-third,
  .bp1-col-set-one-third .grid-col {
    width: 33.333%; }

  .bp1-col-one-quarter,
  .bp1-col-set-one-quarter .grid-col {
    width: 25%; }

  .bp1-col-two-thirds {
    width: 66.666%; }

  .bp1-col-three-quarters {
    width: 75%; } }
/* -- Breakpoint 2 (.bp2)
------------------------------------------------------------- */
@media only screen and (min-width: 48em) {
  .bp2-col-full,
  .bp2-col-set-full .grid-col {
    width: 100%; }

  .bp2-col-one-half,
  .bp2-col-set-one-half .grid-col {
    width: 50%; }

  .bp2-col-one-third,
  .bp2-col-set-one-third .grid-col {
    width: 33.333%; }

  .bp2-col-one-quarter,
  .bp2-col-set-one-quarter .grid-col {
    width: 25%;
	}	
  .bp2-col-two-thirds {
    width: 66.666%; }
  .bp2-col-one-sixth {
    width: 16.666%; }
  .bp2-col-three-quarters {
    width: 75%; } }
/* -- Breakpoint 3 (.bp3)
------------------------------------------------------------- */
@media only screen and (min-width: 60em) {
  .bp3-col-full,
  .bp3-col-set-full .grid-col {
    width: 100%; }

  .bp3-col-one-half,
  .bp3-col-set-one-half .grid-col {
    width: 50%; }

  .bp3-col-one-third,
  .bp3-col-set-one-third .grid-col {
    width: 33.333%; }

  .bp3-col-one-quarter,
  .bp3-col-set-one-quarter .grid-col {
    width: 25%; }

  .bp3-col-two-thirds {
    width: 66.666%; }

  .bp3-col-three-quarters {
    width: 75%; } }